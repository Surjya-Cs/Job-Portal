<!DOCTYPE html>
<html lang="en">
<title>
  <%=page_title%>
</title>

<head>
  <link rel="icon" href="/images/favicon.ico">
  <link rel='stylesheet' , href='/stylesheets/style.css' />
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.5.2/css/bootstrap.min.css">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/css/bootstrap.min.css" rel="stylesheet" type="text/css">
</head>

<%if(token){%>
  <%- include ('../partials/header') %>
<%}%>

<% if(messages !=null && messages.success !=null && messages.success[0] !="" ){ %>
    <div id="msgblock" class="alert alert-success" role="alert">
        <%= messages.success[0] %>
    </div>
<% } %>

<% if(messages !=null && messages.error !=null && messages.error[0] !="" ){ %>
    <div id="msgblock" class="alert alert-danger" role="alert">
        <%= messages.error[0] %>
      </div>
<% } %>

<body>
</body>

</html>

<script>
  setTimeout(() => {
    let msgblock = document.getElementById('msgblock');
    if (msgblock != null) {
      msgblock.remove()
    }
  }, 3000);
</script>